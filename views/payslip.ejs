<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      * {
        margin: 0;
        padding: 10px 40px;
      }
      body{
          font-family: sans-serif;
          zoom: 1;
          padding: 0px 5px;
          font-size: 18px;
      }
      .header__info > img{
        position:absolute;
        right: 0;
        margin-right: 8%;
      }
      .header__name{
          font-size: 1.9rem;
          color: blue;
          font-weight: 800;
          margin-left: 4%;
      }
      .emp__info,.company__info{
          display: flex;
          justify-content: space-between;
      }
      .emp__info__name,.company__info__name{
          margin-left: -10px;
      }
      .emp__info__pay__period,.company__info__salary{
          margin-right: -20px;
      }
      table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 90%;
  margin-bottom: 35px; 
}
.center {
  margin-left: auto;
  margin-right: auto;
}

.extra__td,.payment__td {
    padding: 10px 0px;
}
.bukugaji__slip{
    position: absolute;
    margin-top: 3%;
    right:3%;
    display: flex;
    align-items: center;
    text-align: center;

}
    </style>
  </head>
  <body>
    <div class="header__info">
      <img
        src="data:image/jpeg;base64,"
        alt="payslip"
      />
    </div>
    <div  class="header__name">
        SLIP GAJI
    </div>
    <table style="margin-top: 16px;"  class="center">
        <tr>
            <td style="padding-left: 0 !important;"><strong>Employee Name:</strong><%=reports.ledger.information.employee_name%></td>
            <td ><strong>Pay Period:</strong><%=reports.ledger.information.pay_cycle%></td>
        </tr>
        <tr>
            <td style="padding-left: 0 !important;"><strong>Company Name:</strong>Bukugaji</td>
            <td ><strong>Salary:</strong>Rp <%=reports.ledger.information.salary.toLocaleString(
                undefined,
                { minimumFractionDigits: 0 }
              ).replace(/,/g, '.')%></strong> /month</td>
        </tr>
    </table>
    
    <% let salary = 0; %>
    <% let payment = 0; %>
    <table class="center">
        <tr style="border-bottom:4px black solid">
          <th style="color:rgb(31, 31, 211);" align="left">Attendance</th>
          <th align="left">Days</th>
          <th align="right">Gaji</th>
        </tr>
        <tr>
          <td>Days Present</td>
          <td><%=reports.ledger.attendance.present_days%></td>
          <td style="color: green !important;" align="right">Rp <%=reports.ledger.salary.salary_summary.present_days_wages.toLocaleString(
            undefined,
            { minimumFractionDigits: 0 }
          ).replace(/,/g, '.')%></td>
        </tr>
        <tr>
            <td>Half Days</td>
            <td><%=reports.ledger.attendance.half_days%></td>
            <td style="color: green !important;" align="right">Rp <%=reports.ledger.salary.salary_summary.half_days_wages.toLocaleString(
                undefined,
                { minimumFractionDigits: 0 }
              ).replace(/,/g, '.')%></td>
        </tr>
        <tr>
            <td>Absences</td>
            <td><%=reports.ledger.attendance.absent_days%></td>
            <td style="color: green !important;" align="right">Rp <%=reports.ledger.salary.salary_summary.absent_days_wages.toLocaleString(
                undefined,
                { minimumFractionDigits: 0 }
              ).replace(/,/g, '.')%></td>
        </tr>
        <tr style="border-bottom: 4px #cccccc solid;">
            <td>Holidays</td>
            <td><%=reports.ledger.attendance.paid_holidays%></td>
            <td style="color: green !important;" align="right">Rp <%=reports.ledger.salary.salary_summary.paid_holidays_wages.toLocaleString(
                undefined,
                { minimumFractionDigits: 0 }
              ).replace(/,/g, '.')%></td>
        </tr>
        <tr>
            <td class="payment__td"><strong>Total Gaji Earned</strong</td>
            <td></td>
            <td style="color: green !important;" class="payment__td" align="right"><strong>Rp <%= totalGaji.toLocaleString(
                undefined,
                { minimumFractionDigits: 0 }
              ).replace(/,/g, '.') %></strong> </td>
        </tr>
        </table>
        <table class="center">
            <tr style="border-bottom:4px black solid">
            <th style="color:rgb(31, 31, 211);" align="left">Extras</th>
            <th align="right">Amount</th>
            </tr>
            <% reports.ledger.salary.salary_ledger.forEach((report,index) => {%>
                <tr class="header__monthly">
                  <td align="left"><%=report.description%></td>
                  <td class="extra__td" align="right">
                    <% if(report.ledger_type  == "Addition"){ %>
                      <% salary += report.amount %> 
                      <span style="color: green !important;">Rp <%=report.amount.toLocaleString(
                        undefined,
                        { minimumFractionDigits: 0 }
                      ).replace(/,/g, '.')%></span>
                  <% } else{ %>  
                      <% salary -= report.amount %> 
                      <span style="color: red !important;">Rp <%=report.amount.toLocaleString(
                        undefined,
                        { minimumFractionDigits: 0 }
                      ).replace(/,/g, '.')%></span>
                  <% } %>
                     </td>
                </tr>
                <% });%>
                <tr style="border-top: 4px #ccc solid;">
                    <strong><td class="payment__td" style="color: rgb(46, 48, 48) !important;" align="left" width="55%"><strong>Total Extra</strong></td></strong>
                    <td class="extra__td" style="color: rgb(46, 48, 48) !important;" align="right" width="45%">
                        <% if(salary > 0){ %>
                            <span style="color: green;">
                        Rp <%=salary.toLocaleString(
                      undefined,
                      { minimumFractionDigits: 0 }
                    ).replace(/,/g, '.')%></span>
                    <% }else{ %> 
                        <span style="color: red;">
                            Rp <%=salary.toLocaleString(
                          undefined,
                          { minimumFractionDigits: 0 }
                        ).replace(/,/g, '.')%></span>
                        <% } %> 
                     </td>
                </tr>
        </table>
        <table class="center">
            <tr style="border-bottom:4px black solid">
            <th style="color:rgb(31, 31, 211);" align="left">Payments</th>
            <th align="right">Amount</th>
            </tr>
            <% reports.ledger.salary.payments_ledger.forEach((report,index) => {%>
                <tr class="header__monthly">
                  <td align="left"><%=report.description%></td>
                  <td class="payment__td" align="right">
                    
                      <% payment += report.amount %> 
                      <span style="color: green !important;">Rp <%=report.amount.toLocaleString(
                        undefined,
                        { minimumFractionDigits: 0 }
                      ).replace(/,/g, '.')%></span>
                     </td>
                </tr>
                <% });%>
                <tr style="border-top: 4px #ccc solid;">
                    <strong><td class="payment__td" style="color: rgb(46, 48, 48) !important;" align="left" width="55%"><strong>Total Payments</strong></td></strong> 
                    <td class="payment__td" style="color: rgb(46, 48, 48) !important;" align="right" width="45%"><% if(salary > 0){ %>
                        <span style="color: green;">
                    Rp <%=payment.toLocaleString(
                  undefined,
                  { minimumFractionDigits: 0 }
                ).replace(/,/g, '.')%></span>
                <% }else{ %> 
                    <span style="color: red;">
                        Rp <%=payment.toLocaleString(
                      undefined,
                      { minimumFractionDigits: 0 }
                    ).replace(/,/g, '.')%></span>
                    <% } %>  </td>
                </tr>
        </table>
        <table class="center">
            <tr style="border-top: 4px black solid !important;border-bottom: 4px black solid !important;">
                <td style="padding:0 !important;"><strong>Remaining Balance</strong></td>
                <td></td>
                <td  class="payment__td" align="right"><strong>Rp <%=(totalGaji+salary-payment).toLocaleString(
                    undefined,
                    { minimumFractionDigits: 0 }
                  ).replace(/,/g, '.')%></strong></td>
            </tr>
        </table>
        <div class="bukugaji__slip">
            <span style="color: blue;">Powered by Bukugaji</span>
        </div>
  </body>
</html>
